@model Sigma.Models.Auth
@{
    ViewBag.Title = "Register";
}
<div class="container-fluid text-center">
    <div class="row">
        <div class="col-md-12">
            <img style="width:25%;height:auto" src="~/Content/Images/Logo.png" />
            @*<img src="~/Content/Img/estarta_logo.jpg" alt="Estarta Logo" style="height:250px;background-size:cover; max-width:100%" />*@
            <form action="Signup" method="post">

                <div class="form-group">
                    <label class="control-label col-md-6" for="FirstName">First Name:</label>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                <div class="form-group">
                    <label class="control-label col-md-6" for="LastName">Last Name:</label>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                <div class="form-group">
                    <label class="control-label col-md-6" for="UserName">Username:</label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                <div class="form-group">
                    <label class="control-label col-md-6" for="Password">Password:</label>
                    <input class="form-control" type="password" id="Password" name="Password" required
                           @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="background-color: #198e01;color:white" type="submit" value="Register">
                        <input style="background-color: #198e01;color:white" type="reset" value="Clear">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>