<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mohammad Awwad</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.2.3/dist/flatly/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            @{
                if (@Session["UserName"] == null)
                {
                    <a href="~/Auth/Index"><img src="~/Content/Images/Logo.png" alt="Naqaba" width="50" class="rounded-circle navbar-brand"></a>
                }
                else
                {
                    <a href="/Search/Index"><img src="~/Content/Images/Logo.png" alt="Naqaba" width="50" class="rounded-circle navbar-brand"></a>
                }
            }
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    @{
                        if (@Session["UserName"] == null)
                        {
                            //<li>@Html.ActionLink("Home", "Register", "Auth")</li>
                        }
                        else
                        {
                            if ((string)Session["UserName"] == "Admin")
                            {
                                <li class="nav-item nav-link active">@Html.ActionLink("Home", "Index", "Search")</li>
                                <li class="nav-item nav-link">@Html.ActionLink("Add Client", "Add", "Search")</li>
                                <li class="nav-item nav-link">@Html.ActionLink("Logout", "Logout", "Auth")</li>
                            }
                            else
                            {
                                <li class="nav-item nav-link active">@Html.ActionLink("Home", "Index", "Search")</li>
                                <li class="nav-item nav-link">@Html.ActionLink("Logout", "Logout", "Auth")</li>
                            }
                        }
                    }
                </ul>
                <div class="pull-right navbar-brand" style="color:white">
                    @Session["UserName"]
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-12">
                <footer>
                    <p class="text-center">&copy; @DateTime.Now.Year - Sigma for modern information systems</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
