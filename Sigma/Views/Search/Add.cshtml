@model Sigma.Models.Search
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Created", "Search", FormMethod.Post))
{

    <div class="form-horizontal">
        <h4>Add Client</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NationalID, htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.EditorFor(model => model.NationalID, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-6">
                <input style="background-color: #188e04; color: white" type="submit" value="Save changes" />
            </div>
        </div>
    </div>
}